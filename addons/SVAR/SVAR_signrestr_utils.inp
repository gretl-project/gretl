function void safetycheck1(const matrix Sigma, const matrix iXX, const matrix B)
    hhh = 10
    matrix V = Sigma ** iXX
    chk = B[1:hhh,1] ~ sqrt(diag(V[1:hhh, 1:hhh]))
    strings pnames = array(hhh)
    loop i = 1..hhh -q
        pnames[i] = sprintf("chk%d", i)
    endloop
    modprint chk pnames
end function 

