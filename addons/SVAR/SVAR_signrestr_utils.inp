function matrix rand_rotation(scalar n, const matrix sel)

    scalar nk = cols(sel)
    if nk == 0
	matrix ret = qrdecomp(mnormal(n, n))
    else
	matrix ret = I(n)
	ret[sel, sel] = qrdecomp(mnormal(nk, nk))
    endif

    return ret
end function

