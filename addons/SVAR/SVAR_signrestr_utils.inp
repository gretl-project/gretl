function matrices prepAis(const bundle mod, const matrix shocks)

    nshocks = rows(shocks)
    matrices Ais = array(nshocks)
    loop i = 1..nshocks --quiet
        matrix Ais[i] = selifr(mod.SRest, mod.SRest[,6] .= shocks[i])
    endloop
    return Ais 
end function 

