topsrc = @top_srcdir@
datarootdir = @datarootdir@

# location of various things

WEBDIR = /home/cottrell/stats/esl/website
CHAPDIR = $(topsrc)/doc/chapters
CHAPDIR_IT = $(topsrc)/doc/chapters_it
CMDSDIR = $(topsrc)/doc/commands

REF_CHAPTERS = $(CHAPDIR)/cmdref.xml $(CHAPDIR)optarg.xml
CMDLIST = chapters/cmdlist.xml
CMDREF = $(CMDSDIR)/gretl_commands.xml

REF_CHAPTERS_IT = $(CHAPDIR_IT)/cmdref.xml $(CHAPDIR_IT)/optarg.xml
CMDLIST_IT = chapters_it/cmdlist.xml
