SUBDIRS = tex tex_it

.PHONY : subdirs $(SUBDIRS) texfigs clean install 

subdirs: $(SUBDIRS)

$(SUBDIRS):
	make -C $@

clean:
	make -C tex clean
	make -C tex_it clean
	make -C tex_es clean

install: 
	make -C tex install
	make -C tex_it install
	make -C tex_es clean
