topsrc = @top_srcdir@
docsrc = $(topsrc)/doc

GUIDE = gretl-guide-it.pdf
REF = gretl-ref-it.pdf

TEXSRC = cli.tex \
	criteria.tex \
	graphs.tex \
	modes.tex \
	persistent.tex \
	sampling.tex \
	trouble.tex \
	looping.tex \
	starting.tex \
	discrete.tex \
	appendices.tex \
	matrices.tex \
	introduction.tex \
	datafiles.tex \
	robust_vcv.tex \
	panel.tex \
	genr.tex \
	biblio.tex \
	mle.tex \
	gmm.tex \
	probit.tex \
	nls.tex \
	timeseries.tex \
	vecm.tex \
	functions.tex \
	gretltex.tex \
	cheatsheet.tex \
	reftables.tex \
	cmdref.tex \
	funcref.tex \
	optarg.tex

WEBDIR = /home/cottrell/stats/esl/website

all: $(GUIDE) $(REF)

$(GUIDE): gretl-guide-it.tex links textables date.tex
	pdflatex $<
	pdflatex $<
	pdflatex $<

$(REF): gretl-ref-it.tex links cmdtex functex topiclist date.tex
	pdflatex $<
	pdflatex $<
	pdflatex $<

gretl-guide-it.tex:
	if [ ! -f $@ ] ; then ln -sf $(docsrc)/tex_it/$@ . ; fi

gretl-ref-it.tex:
	if [ ! -f $@ ] ; then ln -sf $(docsrc)/tex_it/$@ . ; fi

.PHONY : links cmdtex functex textables onepass refpass topiclist install clean

links:
	rm -f gretl.sty && ln -s ../gretl.sty ./gretl.sty
	rm -f figures && ln -s $(docsrc)/figures_it ./figures
	for f in $(TEXSRC) ; do \
	if [ ! -f $$f ] ; then ln -sf $(docsrc)/tex_it/$$f . ; fi ; done

cmdtex:
	make -C ../commands cmdtex_it

topiclist:
	make -C ../commands topiclist_it

textables:
	make -C ../commands textables

functex:
	make -C ../commands functex_it

date.tex:
	LANG=it_IT date "+%B %Y" | sed 's/^[a-z]/\u&/' > $@

onepass: gretl-guide-it.tex links textables
	pdflatex gretl-guide-it

refpass: gretl-ref-it.tex links cmdtex functex topiclist
	pdflatex gretl-ref-it

install: $(GUIDE) $(REF)
	cp $(GUIDE) $(REF) $(WEBDIR)

clean:
	rm -f *.aux *.log *.out *.toc *.tpt *.pdf
	rm -f refbody.tex funcbody.tex cmdtopics.tex
	rm -f ../commands/textables ../commands/topiclist_it 
	rm -f ../commands/cmdtex_it ../commands/functex_it

distclean: clean
	rm -rf CVS
